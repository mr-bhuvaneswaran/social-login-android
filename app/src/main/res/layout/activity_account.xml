<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account">

    <include android:id="@+id/account_bar" layout="@layout/appbar"></include>

    <TextView
        android:id="@+id/acc_name_static"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="107dp"
        android:text="Username" />

    <TextView
        android:id="@+id/acc_name_dynamic"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/acc_name_static"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/acc_name_static"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/acc_mail_static"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/acc_name_static"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/acc_name_static"
        android:layout_marginTop="213dp"
        android:text="E-mail" />

    <TextView
        android:id="@+id/acc_mail_dynamic"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/acc_name_static"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/acc_name_static"
        android:layout_marginTop="257dp" />

    <TextView
        android:id="@+id/acc_phone_static"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/acc_name_static"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/acc_name_static"
        android:layout_marginBottom="236dp"
        android:text="Mobile" />

    <TextView
        android:id="@+id/acc_phone_dynamic"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/acc_name_static"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/acc_name_static"
        android:layout_marginBottom="185dp" />

</RelativeLayout>